@model OrderDetailsPastViewModel

<div class="container" style="height:525px">
    <div class="row">
        <div class="col-md-12 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3 pt-5">
                <span class="text-muted">Your orders</span>
                <span class="badge badge-secondary badge-pill">@Model.Count</span>
            </h4>
            <table class="table table-light">
                @foreach (var item in Model.Orders)
                {
                    <tr>
                        <th scope="col">Order Id</th>
                        <th scope="col">Package Name</th>
                        <th scope="col">Date</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Total Price</th>
                        <th scope="col"></th>
                    </tr>
                    <tr>
                        <td>@item.OrderId</td>
                        <td>@item.PackageName</td>
                        <td>@item.Date</td>
                        <td>@item.Quantity</td>
                        <td>@item.TotalPrice</td>
                        <td><a class="btn btn-primary" href="@Url.Action("Feedback","Package", new { id = item.PackageId})">Leave feedback</a></td>
                    </tr>
                }
            </table>

        </div>
    </div>
</div>

